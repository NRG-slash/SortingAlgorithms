<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.glaturski.sortingalgorithms.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:layout_alignParentTop="true"
            android:text="Contact Book"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:padding="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:layout_alignParentLeft="true"
            android:text="Name:"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_name"
            android:layout_toRightOf="@id/tv_name"
            android:layout_alignBaseline="@id/tv_name"
            android:hint="Enter your contact's name here"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone"
            android:layout_alignParentLeft="true"
            android:text="Phone:"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_phone"
            android:layout_toRightOf="@id/tv_phone"
            android:layout_alignBaseline="@id/tv_phone"
            android:hint="Enter your contact's phone # here"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email"
            android:layout_alignParentLeft="true"
            android:text="e-mail:"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_email"
            android:layout_toRightOf="@id/tv_email"
            android:layout_alignBaseline="@id/tv_email"
            android:hint="Enter your contact's e-mail here"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_margin="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add"
            android:layout_below="@+id/et_email"
            android:text="ADD CONTACTS"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="19dp"
            android:onClick="addContact"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_sort"
            android:layout_below="@id/btn_add"
            android:layout_centerHorizontal="true"
            android:text="SORT CONTACTS"
            android:textSize="19sp"
            android:onClick="sortContacts"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_error"
            android:layout_below="@+id/btn_sort"
            android:padding="30dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_list"
            android:layout_alignTop="@id/tv_error"
            android:padding="30dp"
            android:textSize="22sp"/>

    </ScrollView>

</FrameLayout>
